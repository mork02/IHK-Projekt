<odoo>
    <data>
        <record id="ir_attachment_export_tree" model="ir.ui.view">
            <field name="name">ir.attachment.export.tree</field>
            <field name="model">ir.attachment.export</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_ids" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_attachment_size"/>
                    <field name="attachment_ids"/>
                </tree>
            </field>
        </record>

        <record id="ir_attachment_export_action" model="ir.actions.act_window">
            <field name="name">Attachment Export</field>
            <field name="res_model">ir.attachment.export</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval=
            "[(5, 0, 0), 
            (0, 0, {'view_mode': 'tree', 'view_id': ref('dms_attachment_manager.ir_attachment_export_tree')})]"/>
            <field name="target">current</field>
            <field name="limit">10</field>
        </record>
    </data>
</odoo>
